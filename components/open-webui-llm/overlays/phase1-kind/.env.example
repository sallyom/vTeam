# Phase 1 (Kind) Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Your Anthropic API key (get from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# LiteLLM master key for API authentication
# This is used by Open WebUI to authenticate with LiteLLM
LITELLM_MASTER_KEY=sk-litellm-dev-master-key

# Optional: OpenAI API key (if you want to use OpenAI models)
# OPENAI_API_KEY=sk-xxxxx

# Open WebUI settings
WEBUI_AUTH=false  # No authentication in Phase 1 (dev only)
OPENAI_API_BASE_URL=http://litellm-service:4000/v1
